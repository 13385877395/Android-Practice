<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.ChangePasswordPage"
    android:orientation="vertical"
    android:layout_margin="30dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入修改的密码："
        android:textSize="20sp"
        android:textColor="@color/primary"/>
    <EditText
        android:id="@+id/password_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="6_16个字符区分大小写"
        android:textColorHint="@color/primary"
        android:maxLength="16"
        android:inputType="textPassword"
        tools:ignore="Autofill"/>
    <Button
        android:id="@+id/nextStep_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="确定"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/phonenumber"/>

    <CheckBox
        android:id="@+id/radio_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="显示密码"
        android:textSize="20sp"
        android:textColor="@color/primary"
        android:checked="true"/>


</LinearLayout>