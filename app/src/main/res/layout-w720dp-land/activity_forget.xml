<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.ForgetActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你可以通过绑定的手机进行重置密码"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        style="@style/textStyle_1"
        android:layout_marginTop="200dp"/>
    <EditText
        android:id="@+id/editText_forget"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:inputType="phone"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="请输入手机号"
        android:drawablePadding="20dp"
        android:maxLength="11"
        tools:ignore="Autofill"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">
        <EditText
            android:id="@+id/yanCode_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="4"
            tools:ignore="Autofill"/>
        <Button
            android:id="@+id/button_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/phonenumber"
            android:enabled="false"
            android:text="获取验证码"
            style="@style/textStyle_2"/>
    </LinearLayout>
    <Button
        android:id="@+id/nextStep_forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="修改密码"
        style="@style/textStyle_2"
        android:background="@drawable/phonenumber"
        android:enabled="false"/>
</LinearLayout>